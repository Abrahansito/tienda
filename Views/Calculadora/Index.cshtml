@{
    ViewBag.Title = "Calculadora";
}

<h1>Calculadora Científica</h1> 


<form method="post" asp-action="Calcular">
    <div class="form-group">
        <label for="numero1">Número 1</label>
        <input type="number" class="form-control" id="numero1" name="Operador1"/>
    </div>
    <div class="form-group mt-2">
        <label for="numero2">Número 2</label>
        <input type="number" class="form-control" id="numero2" name="Operador2"/>
    </div>
    <div class="form-group mt-2">
        <label for="operacion">Operación</label>
        <select class="form-control" id="operacion" name="Operacion">
            <option value="Suma">Sumar +</option>
            <option value="Resta">Restar -</option>
            <option value="Multiplicacion">Multiplicar</option>
            <option value="Division">Dividir</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Calcular</button>
</form>

<h1>@ViewData["Resultado"]</h1>
    